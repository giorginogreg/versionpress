{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "typeRoots": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/__tests__/*.ts",
    "node_modules/**"
  ]
}